<%= form_with model: @person do |form| %>
  <div>
    <%= form.label :first_name, "First Name" %>
    <%= form.text_field :first_name %>
    <% @person.errors.full_messages_for(:first_name).each do |message| %>
      <span role="error"><%= message %></span>
    <% end %>
  </div>
  <div>
    <%= form.label :last_name, "Last Name" %>
    <%= form.text_field :last_name %>
    <% @person.errors.full_messages_for(:last_name).each do |message| %>
      <span role="error"><%= message %></span>
    <% end %>
  </div>
  <div>
    <%= form.label :username, "Username" %>
    <%= form.text_field :username %>
    <% @person.errors.full_messages_for(:username).each do |message| %>
      <span role="error"><%= message %></span>
    <% end %>
  </div>
  <%= form.submit "Save Owner" %>
<% end %>