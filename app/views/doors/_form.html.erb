<%= form_with model: @door do |form| %>
  <div>
    <%= form.label :house_id, "Which house does this door belong in?" %>
    <%= form.select :house_id, House.all.collect { |house| [house.name, house.id] }, { include_blank: true, selected: params[:house_id]} %>
    <% @door.errors.full_messages_for(:house_id).each do |message| %>
      <span role="error"><%= message %></span>
    <% end %>
  </div>
  <%= form.submit %>
<% end %>